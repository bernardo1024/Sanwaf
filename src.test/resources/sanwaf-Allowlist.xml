<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<sanwaf>
	<global-settings>
		<enabled>true</enabled>
		<verbose>false</verbose>
		<app.version>=${yourapp.release.version}</app.version>	
		<errorHandling>
			<provideTrackId>true</provideTrackId>
			<provideErrors>true</provideErrors>
		</errorHandling>
	</global-settings>
	
	<shields>
		<shield>
      <shield-settings>
  			<name>Allowlist</name>
      </shield-settings>
			<metadata>
				<enabled>
					<parameters>true</parameters>
					<headers>true</headers>
					<cookies>true</cookies>
				</enabled>
				<caseSensitive>
					<parameters>true</parameters>
					<headers>true</headers>
					<cookies>true</cookies>
				</caseSensitive>
				<secured>
					<parameters>
						<item><name>allowlistedParameter</name></item>
					</parameters>
					<headers>
						<item><name>allowlistedHeader</name></item>
					</headers>
					<cookies>
						<item><name>allowlistedCookie</name></item>
					</cookies>
				</secured>
			</metadata>
		</shield>
	</shields>
</sanwaf>
